<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    tools:context=".MainActivity2">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dear"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="userNameTextView"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Guesses: "
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/userGuessTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temp_guesses"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Success Probability: "
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/probabilityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Temp_probability"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        />

</LinearLayout>